                        <Button  @click="render('2',item)" style="padding: 6px;" type="text"><Icon type="search"></Icon> 查看</Button>
                        <Button @click="remove" style="padding: 6px;" type="text"><Icon type="trash-a"></Icon> 删除</Button>
