      methods:{
        //获取文件上传token
        getToken(){

          let that = this;
          let qs = require('qs');
          that.axios({
              url:'/v1/file/uptoken',
              method:'post',
            })
            .then((res)=>{
              let needData = res.data;
              if(needData.code=='200'){
                token= needData.data;
              }else{
                that.$Message.error(needData.msg)
              }
            })
            .catch(err=>{
              that.$Message.error('网络请求异常');
            })
        },
        render (type,item) {
          // type: 1是编辑 2是查看
          let disabled = false;
          let that = this;
          let qs = require('qs');
          if(type=='1'){
            disabled=false;
          }else if(type=='2'){
            disabled=true;
          }
          this.$Modal.confirm({
              render: (h) => {
                return h('Input', {
                  props: {
                    value: item.file_name,
                    disabled:disabled,
                    autofocus: true,
                    placeholder: '请输入修改的标题名'
                  },
                  on: {
                    input: (val) => {
//                      item.file_name= val;
                      that.axios({
                          url:'/v1/recruit/step-normal-user-material-rename',
                          method:'post',
                          data:qs.stringify({
                            id:item.file_id,
                            file_name:val
                          })
                        })
                        .then((res)=>{
                        let needData = res.data;
                        if(needData.code=='200'){
                          item.file_name= val;
                        }else{
                          that.$Message.error(needData.msg)
                        }
                      })
                      .catch(err=>{
                          that.$Message.error('网络请求异常');
                      })
                    }
                  }
                })
              },
          })
        },
        remove(item,index){
