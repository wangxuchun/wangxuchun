<template>
    <div class="info-content start-box box-orient" @click="stopP">
        <div class="info-title start-box box-align box-pack info-padding">
            <p>{{this.$store.state.slideData.name}}</p>
            <i class="cursor-point ivu-icon ivu-icon-close"  @click="closeInfo"></i>
        </div>
        <unitForm></unitForm>
        <router-view></router-view>
    </div>
</template>
<script>
    import unitForm from '@/components/forms/unit/unitForm.vue'
    export default {
        name: 'unit',
        data() {
            return {
                switchOpen: 0,
                buttonType: 'ghost',
                infodata: {}
            }
        },
        computed: {
        },
        watch: {
        },
        components: {
           unitForm,
        },
        methods: {
            stopP() {
                event.stopPropagation();
            },
            switchButton() {
                this.buttonType = 'error'
            },
            closeInfo() {
                this.$router.go(-1);
            },
            getInfo(id, type) {
                let that = this;
                let qs = require('qs');
                this.axios({
                    method: 'get',
                    url: '/v1/dept/detail',
                    params: {
                        dept_id: id ? id : 0,
                        opt: type ? type : 0,
                    }
                })
                .then(res => {
                    let needData = res.data;
                    if (needData.code == 200) {
                        that.infodata = needData.data;
                    } else {
                        that.$Message.error(needData.msg);
                    }
                })
                .catch(err => {
                    this.$Message.error('网络请求异常');
                })
            },
        },
        created() {
        },
        mounted() {

        },
    }
</script>
